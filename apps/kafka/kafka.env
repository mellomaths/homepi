# Kafka Environment Configuration
# Copy this file to .env.local and modify as needed for your environment

# Network Configuration
KAFKA_NETWORK_SUBNET=172.20.0.0/16

# Kafka Configuration
KAFKA_BROKER_ID=1
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:29092,PLAINTEXT_HOST://localhost:9092
KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT

# Schema Registry Configuration
SCHEMA_REGISTRY_HOST_NAME=schema-registry
SCHEMA_REGISTRY_KAFKASTORE_BOOTSTRAP_SERVERS=kafka:29092
SCHEMA_REGISTRY_KAFKASTORE_CONNECTION_URL=zookeeper:2181

# Kafka Connect Configuration
CONNECT_BOOTSTRAP_SERVERS=kafka:29092
CONNECT_GROUP_ID=compose-connect-group
CONNECT_VALUE_CONVERTER_SCHEMA_REGISTRY_URL=http://schema-registry:8081

# Ports
KAFKA_PORT=9092
SCHEMA_REGISTRY_PORT=8081
KAFKA_CONNECT_PORT=8083
KAFKA_UI_PORT=8080
ZOOKEEPER_PORT=2181

# JMX Ports
KAFKA_JMX_PORT=9101

# Logging
LOG_LEVEL=INFO

# Retention Settings (in hours)
LOG_RETENTION_HOURS=168

# Replication Settings
DEFAULT_REPLICATION_FACTOR=1
OFFSETS_TOPIC_REPLICATION_FACTOR=1
TRANSACTION_STATE_LOG_REPLICATION_FACTOR=1

# Partition Settings
NUM_PARTITIONS=3
MIN_INSYNC_REPLICAS=1
